@model Nhom12_Website_Ban_Cua.Models.EF.SanPham

@{
    ViewBag.Title = "ChiTietSanPham";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@helper FormatCurrency(double input)
{
    var formatted = input.ToString("#,0", System.Globalization.CultureInfo.GetCultureInfo("vi-VN"));
    @formatted
    <text> đ </text>
}

@{ int MaSP = 0;}

<!-- Shop Detail Start -->
<div style="padding: 20px 20px; margin: 5px 75px;">
    <div class="row p-2">
        <div class="col-lg-5 mb-3 "">
            <div class="bg-white col-12 sdb-2" style="padding: 15px;">
                <div id="product-carousel" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        @if (ViewBag.AnhSP != null && ViewBag.AnhSP.Count > 0)
                        {
                            var isActive = "active"; // Đánh dấu ảnh đầu tiên là active
                            foreach (var anh in ViewBag.AnhSP)
                            {
                                <div class="carousel-item @isActive">
                                    <img class="w-100 h-100" src="~/Content/img/Anh_Nho/@anh.Trim()" alt="Image">
                                </div>
                                isActive = ""; // Chỉ đánh dấu active cho ảnh đầu tiên
                            }
                        }
                    </div>

                    <a class="carousel-control-prev" href="#product-carousel" data-slide="prev">
                        <i class="fa fa-2x fa-angle-left text-dark"></i>
                    </a>
                    <a class="carousel-control-next" href="#product-carousel" data-slide="next">
                        <i class="fa fa-2x fa-angle-right text-dark"></i>
                    </a>
                </div>
            </div>

        </div>


        <div class="col-lg-7 h-auto mb-3" style="padding-left: 15px;">
            <div class="h-100 bg-white p-4 sdb-2">
                <h3>@Model.TenSP</h3>
                <div class="mt-2" style="display: flex; align-items: center;">
                    <p class="new-price" style="color: #2B2E4A; font-weight: bold; font-size: 21px;">  @FormatCurrency((double)(Model.Gia - Model.Gia * Model.GiamGia / 100)) </p>
                    <p class="text-mutedold-price" style="margin-left: 30px; text-decoration: line-through;"> Giá gốc: @FormatCurrency((double)Model.Gia)</p>
                </div>
                @if (@Model.SoLuongTon < 5)
                {
                    <div style="width: 50%;">
                        <p class="font-weight-semi-bold mb-3 mt-1 pb-2" style="color: red; border-bottom: 4px solid #e5e5e5;">Hãy nhanh tay lên! Chỉ còn @Model.SoLuongTon sản phẩm</p>
                    </div>

                }

                <div class="mb-4">
                    <strong class="text-dark mr-3">Hướng Cửa:</strong>
                    <form>
                        <div class="d-flex mt-3 ml-3">
                            @if (ViewBag.HuongCua != null)
                            {
                                int index = 1;
                                foreach (var hc in ViewBag.HuongCua)
                                {
                                    <div class="custom-control custom-radio custom-control-inline pl-2">
                                        <span class="btn btn-outline-secondary">@hc</span>
                                    </div>
                                    index++;
                                }
                            }
                        </div>

                    </form>
                </div>

                <div class="mb-3">
                    <strong class="text-dark mr-3">Kích Thước:</strong>
                    <form>
                        <div class="d-flex mt-3 ml-3">
                            <div class="custom-control custom-radio custom-control-inline pl-2">
                                <span class="btn btn-outline-secondary">@Model.KichThuoc</span>
                            </div>
                        </div>

                    </form>
                </div>

                <div class="mb-3 mt-2" style="display: flex;">
                    <strong class="text-dark mr-3" style="width: 80px;">Màu Sắc:</strong>
                    <form>
                        @if (ViewBag.MauSac != null)
                        {
                            int index = 1;
                            foreach (var mau in ViewBag.MauSac)
                            {
                                <div class="custom-control custom-radio custom-control-inline text-dark mb-2">
                                    <input type="radio" class="custom-control-input" id="color-@index" name="color" value="@mau">
                                    <label class="custom-control-label" for="color-@index">@mau</label>
                                </div>
                                index++;
                            }
                        }
                    </form>
                </div>

                <div class="d-flex align-items-center mb-3 pt-2">
                    <strong class="text-dark mr-3">Số Lượng:</strong>
                    <div class="input-group quantity mr-3" style="width: 130px;">
                        <div class="input-group-btn">
                            <button class="btn btn-primary btn-minus">
                                <i class="fa fa-minus"></i>
                            </button>
                        </div>
                        <input type="text" class="form-control border-0 text-center" value="1">
                        <div class="input-group-btn">
                            <button class="btn btn-primary btn-plus">
                                <i class="fa fa-plus"></i>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="d-flex mt-4" style="gap: 40px;">
                    <button class="btn btn-primary p-3" href="javascript:void(0);" onclick="event.stopPropagation(); addToCart(@ViewBag.MaSP)">
                        <i class="fa fa-shopping-cart mr-1"></i> Thêm Vào Giỏ Hàng
                    </button>
                    <a href="/ShoppingCart/Mua1SP?MSP=@Model.MaSP" class="btn btn-primary" style="padding: 10px 40px; line-height:30px">Mua Ngay</a>
                </div>

            </div>
        </div>
    </div>
    <div class="row p-2">
        <div class="col">
            <div class="bg-white p-5 sdb-2">
                <div class="nav nav-tabs mb-4">
                    <a class="nav-item nav-link text-dark active" data-toggle="tab" href="#tab-pane-1">Mô Tả</a>
                    <a class="nav-item nav-link text-dark" data-toggle="tab" href="#tab-pane-3">Đánh Giá (1)</a>
                </div>
                <div class="tab-content">
                    <div class="tab-pane fade show active" id="tab-pane-1">
                        <h4 class="mb-3">Mô tả sản phẩm</h4>
                        <p style="margin-left: 10px;">@Html.Raw(Model.MoTa)</p>
                    </div>

                    <div class="tab-pane fade" id="tab-pane-3">
                        <div class="row">
                            <div class="col-md-6">
                                <h4 class="mb-4">1 đánh giá cho "@Model.TenSP"</h4>
                                <div class="media mb-4">
                                    <div class="media-body" style="border-bottom: 1px solid #F4F5F8; border-top: 1px solid #e5e5e5; padding: 7px; ">
                                        <h6>John Doe<small> - <i>16/04/2024</i></small></h6>
                                        
                                        <p>Sản phẩm có chất liệu tốt, màu rất đẹp.</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <h4 class="mb-4">Viết đánh giá</h4>
                                <small>Email và tài khoản của bạn sẽ không bị công khai khi đánh giá. *</small>
                                <form>
                                    <div class="form-group">
                                        <label for="message">Đánh Giá Của Bạn: *</label>
                                        <textarea id="message" cols="30" rows="5" class="form-control"></textarea>
                                    </div>
                                    <div class="form-group">
                                        <label for="name">Họ Tên: *</label>
                                        <input type="text" class="form-control" id="name">
                                    </div>
                                    <div class="form-group">
                                        <label for="email">Email *</label>
                                        <input type="email" class="form-control" id="email">
                                    </div>
                                    <div class="form-group mb-0">
                                        <input type="submit" value="Gửi Đánh Giá" class="btn btn-primary px-3">
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Shop Detail End -->