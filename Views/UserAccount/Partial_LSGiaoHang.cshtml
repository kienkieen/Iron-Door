@using Nhom12_Website_Ban_Cua.Models.EF
@model List<DatHang>

@helper FormatCurrency(double input)
{
    var formatted = input.ToString("#,0", System.Globalization.CultureInfo.GetCultureInfo("vi-VN"));
    @formatted
    <text> đ </text>
}

<div id="noidung">
    <h1 class="position-relative text-uppercase mb-4 text-center" style="border-bottom: 2px solid gray; margin: 10px 330px; padding-bottom: 10px;"><span class="pr-3">LỊCH SỬ MUA HÀNG</span></h1>
    <div class="col-lg-12 col-md-12 mb-4">
        <div class="table-responsive bg-white ">

            <table class="table table-borderless table-hover text-center mb-0">
                <thead style="font-weight: 400; color: black !important; border-bottom: 2px solid #F4F5F8 ">
                    <tr>

                        <th style="width: 10%;">Mã Đơn</th>
                        <th style="width: 20%;">Ngày Đặt</th>
                        <th style="width: 20%;">Ngày Giao</th>
                        <th style="width: 17%;">Tổng</th>
                        <th style="width: 17%;">Trạng Thái</th>
                        <th style="width: 16%;"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (DatHang dh in Model)
                    {
                        <tr style="border-bottom: 1px solid #F4F5F8;">
                            <td class="align-middle">
                                @dh.MaDonDatHang
                            </td>
                            <td class="align-middle">@dh.NgayDatHang</td>
                            <td class="align-middle">@dh.NgayGiaoHang</td>
                            <td class="align-middle">@FormatCurrency((double)dh.TongTienThanhToan)</td>
                            <td class="align-middle">@dh.TrangThai.TenTrangThai</td>
                            <td class="align-middle">
                                <div style="display: flex; justify-content: space-between;">
                                    <a href="" class="xem-chi-tiet" data-url="/UserAccount/Partial_XemChiTietDH?MaDH=@dh.MaDonDatHang">Xem chi tiết</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>



<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

<script src="~/Scripts/js/useraccount.js?v=@DateTime.Now.Ticks"></script>