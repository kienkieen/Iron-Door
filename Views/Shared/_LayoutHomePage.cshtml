<script>
function addToCart(productId) {
    $.ajax({
        url: '@Url.Action("ThemHang", "ShoppingCart")',
        type: 'GET',
        data: { maSP: productId },
        success: function(response) {
            if (response.success) {
                // Hiển thị thông báo thành công
                showNotification('success', response.msg);

                // Cập nhật số lượng giỏ hàng trên header nếu có
                updateCartCount(response.count);

                // Có thể reload lại partial view giỏ hàng nếu cần
                // $('#cart-partial').load('@Url.Action("_Partial_GioHang", "ShoppingCart")');
            } else {
                // Hiển thị thông báo lỗi
                showNotification('error', response.msg);

                // Nếu cần redirect (ví dụ: chưa đăng nhập)
                if (response.redirect) {
                    setTimeout(function() {
                        window.location.href = response.redirect;
                    }, 2000);
                }
            }
        },
        error: function(xhr, status, error) {
            showNotification('error', 'Có lỗi xảy ra khi thêm sản phẩm vào giỏ hàng!');
            console.error('Error:', error);
        }
    });
}

// Hàm hiển thị thông báo động
function showNotification(type, message) {
    // Xóa thông báo cũ nếu có
    $('.dynamic-notification').remove();

    let alertClass = '';
    let icon = '';

    switch(type) {
        case 'success':
            alertClass = 'alert-success';
            icon = 'fas fa-check-circle';
            break;
        case 'error':
            alertClass = 'alert-danger';
            icon = 'fas fa-exclamation-circle';
            break;
        case 'info':
            alertClass = 'alert-info';
            icon = 'fas fa-info-circle';
            break;
        case 'warning':
            alertClass = 'alert-warning';
            icon = 'fas fa-exclamation-triangle';
            break;
        default:
            alertClass = 'alert-info';
            icon = 'fas fa-info-circle';
    }

    const notificationHtml = `
        <div class="alert ${alertClass} alert-dismissible fade show dynamic-notification" role="alert" style="position: fixed; top: 20px; right: 20px; z-index: 9999; min-width: 300px; max-width: 500px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); border: none; border-radius: 8px;">
            <i class="${icon} me-2"></i>
            ${message}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    `;

    // Thêm thông báo vào body
    $('body').append(notificationHtml);

    // Tự động ẩn sau 5 giây
    setTimeout(function() {
        $('.dynamic-notification').fadeOut(500, function() {
            $(this).remove();
        });
    }, 5000);
}

// Hàm cập nhật số lượng giỏ hàng
function updateCartCount(count) {
    // Cập nhật các element hiển thị số lượng giỏ hàng
    $('.cart-count').text(count);
    $('#cart-badge').text(count);

    // Ẩn hiện badge nếu số lượng = 0
    if (count > 0) {
        $('.cart-badge').show();
    } else {
        $('.cart-badge').hide();
    }
}

// Xử lý khi document ready
$(document).ready(function() {
    // Xử lý click button close cho các thông báo tĩnh
    $(document).on('click', '.alert .btn-close', function() {
        $(this).closest('.alert').fadeOut(300, function() {
            $(this).remove();
        });
    });
});
</script>