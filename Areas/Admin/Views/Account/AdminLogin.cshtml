
@{
    ViewBag.Title = "AdminLogin";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutLogin.cshtml";
}


@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger text-center" style="width: 60%; margin: 10px auto;">@ViewBag.ErrorMessage</div>
}
<div style="background-color: white; padding: 20px; box-shadow: 0 2px 6px 0 rgba(0, 0, 0, 0.3); width: 40%; margin: 100px auto;">
    <section id="loginForm">
        @using (Html.BeginForm("AdminLogin", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h4 class="text-center">ĐĂNG NHẬP CHO ADMIN</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group ">
                <p class="control-label">Tên Tài Khoản</p>
                <input id="tentaikhoan" name="tentaikhoan" type="text" class="form-control" required>
            </div>
            <div class="form-group matkhau">
                <p class="control-label">Mật Khẩu</p>
                <div class="">
                    <input id="matkhau" name="matkhau" type="password" class="form-control" required>
                    <span class="show-hide"><i class="fas fa-eye"></i></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <div class="checkbox">
                    </div>
                </div>
            </div>
            <div class="row m-1">
                <span>
                    <a href="/Home/Index" class="forgot-password">Quay về trang chủ</a>
                </span>
            </div>
            <div class="form-group d-flex justify-content-center">
                <button class="btn-login form-submit btn-blocker custom-btnmt-3 bg-secondary" style="border-radius: unset; margin: unset; color: white; padding: 10px 20px; width: 200px;">
                    ĐĂNG NHẬP
                </button>
            </div>
        }
    </section>
</div>

<script>
    const pass_field = document.querySelector('#matkhau');
    const show_btn = document.querySelector('.fa-eye');
    show_btn.addEventListener("click", function () {
        if (pass_field.type === "password") {
            pass_field.type = "text";
            show_btn.classList.add("hide");
        } else {
            pass_field.type = "password";
            show_btn.classList.remove("hide");
        }
    });

</script>